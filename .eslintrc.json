{
  //보통은 babel-eslint typescript는 @typescript-eslint/parser
  "parser": "@typescript-eslint/parser",
  //ESLint 사용을 위해 지원하려는 Javascript 언어 옵션을 지정
  "parserOptions": {
    "ecmaVersion": 6,
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  //사전 정의된 전역 변수 사용을 정의
  "env": {
    "node": true,
    "browser": true
  },
  //플러그인 사용
  "plugins": ["@typescript-eslint"],
  //추가한 플러그인에서 사용할 규칙을 설정
  //플러그인은 일련의 규칙 집합이며, 플러그인을 추가하여도 규칙은 적용되지 않습니다.
  //규칙을 적용하기 위해서는 추가한 플러그인 중, 사용할 규칙을 추가해주어야 적용이 됩니다.
  //plugin:를 사용하여 사용할 플러그인을 지정
  "extends": [
    "plugin:react/recommened",
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  //활성화 규칙 및 오류 수준
  // extends에서 적용한 룰셋을 덮어씌울 수 있습니다.
  "rules": {
    "no-console": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}

//@typescript-eslint/parser: eslint에 타입스크립트 파서 사용
//@typescript-eslint/eslint-plugin: 타입스크립트 룰 모음집
//eslint-plugin-react: 리액트와 관련된 eslint 룰셋

